@page "/livros"
@inherits LivrosBase

<h3>Livros</h3>

@if (Livros == null)
{
    <Loading />
}
else
{
    <button style="margin-bottom: 5px" @onclick="Novo" class="btn btn-primary">Novo</button>

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Autor</th>
                <th scope="col">Ano</th>
                <th scope="col">Situação</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var livro in Livros)
            {
            <tr>
                <td style="width:50px">@livro.Id</td>
                <td>@livro.TituloESubTitulo</td>
                <td>@livro.Ano</td>
                <td>@livro.SituacaoStr</td>
                <td style="width:90px">
                    <button @onclick="() => Editar(livro)" class="btn btn-primary btn-sm oi oi-pencil"></button>
                    <button @onclick="() => Excluir(livro)" class="btn btn-danger btn-sm oi oi-circle-x"></button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}